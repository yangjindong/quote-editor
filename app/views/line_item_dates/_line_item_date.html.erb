<%= turbo_frame_tag line_item_date do %>
  <div class="mb-5">
    <%= turbo_frame_tag dom_id(line_item_date, :edit) do %>
      <div class="flex items-center justify-between gap-3">
        <h2 class="text-xl">
          <%= l(line_item_date.date, format: :long) %>
        </h2>
        <div class="flex gap-2">
          <%= button_to "Delete",
                    [quote, line_item_date],
                    method: :delete,
                    form: { data: { turbo_confirm: "Are you sure?" } },
                    class: "border p-1 rounded-md bg-gray-200" %>
          <%= link_to "Edit",
                  [:edit, quote, line_item_date],
                  class: "border p-1 rounded-md bg-gray-200" %>
        </div>
      </div>
    <% end %>
    <div class="p-3 mt-3 bg-white rounded shadow">
      <div class="flex items-start gap-3 p-2 mb-3 bg-gray-100 rounded-md">
        <div class="flex-1 font-bold">Article</div>
        <div class="w-[6rem]">Quantity</div>
        <div class="w-[6rem]">Price</div>
        <div class="w-[6rem]"></div>
      </div>
      <%= turbo_frame_tag nested_dom_id(line_item_date, "line_items") do %>
        <%= render line_item_date.line_items, quote: quote, line_item_date: line_item_date %>
      <% end %>
      <%= turbo_frame_tag nested_dom_id(line_item_date, LineItem.new) %>
      <div class="p-3 text-center border border-dashed">
        <%= link_to "Add Item", [:new, quote, line_item_date, :line_item], data: { turbo_frame: nested_dom_id(line_item_date, LineItem.new) },class: "bg-primary-500 text-white px-3 py-2 rounded-md text-sm font-medium hover:bg-primary-700" %>
      </div>
    </div>
  </div>
<% end %>
