<h1 class="mb-5 text-3xl font-semibold text-center">Sign in</h1>
<%= form_with(url: sign_in_path, class: "max-w-sm mx-auto flex flex-col gap-3") do |form| %>
  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.email_field :email, value: params[:email_hint], required: true, autofocus: true, autocomplete: "email", class: "bg-gray-50 border border-gray-300 rounded block w-full p-2" %>
  </div>
  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.password_field :password, required: true, autocomplete: "current-password", class: "bg-gray-50 border border-gray-300 rounded block w-full p-2" %>
  </div>
  <div class="text-center">
    <%= form.submit "Sign in", class: "bg-primary-500 hover:bg-primary-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>
<div class="mt-5 text-center">
  <%= link_to "Sign up", sign_up_path %> |
  <%= link_to "Forgot your password?", new_identity_password_reset_path %>
</div>
