<%= turbo_frame_tag line_item do %>
  <div class="flex items-start gap-3 p-2 mb-1">
    <div class="flex-1">
      <%= line_item.name %>
      <div class="max-w-full flex-basis-100">
        <%= simple_format line_item.description %>
      </div>
    </div>
    <div class="w-[6rem]">
      <%= line_item.quantity %>
    </div>
    <div class="w-[6rem]">
      <%= line_item.unit_price %>
    </div>
    <div class="flex order-2 gap-2 w-[6rem]">
      <%= button_to "Delete",
                  [quote, line_item_date, line_item],
                  method: :delete,
                  class: "btn btn--light" %>
      <%= link_to "Edit",
                [:edit, quote, line_item_date, line_item],
                class: "btn btn--light" %>
    </div>
  </div>
<% end %>
