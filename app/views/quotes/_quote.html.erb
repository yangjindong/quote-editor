<%= turbo_frame_tag quote do %>
  <div class="flex items-center justify-between p-2 mb-3 bg-white rounded shadow">
    <%= link_to quote.name, quote, data: { turbo_frame: "_top" }, class: "text-primary-600" %>
    <div class="flex items-center gap-2">
      <%= button_to "Delete", quote, method: :delete, class: "bg-primary-500 text-white p-1 border rounded hover:bg-primary-600" %>
      <%= link_to "Edit", edit_quote_path(quote), class: "bg-primary-500 text-white p-1 border rounded hover:bg-primary-600" %>
    </div>
  </div>
<% end %>